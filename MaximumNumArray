public class MaximumNumArray {
    public static void main(String[] args) {
        int[] numbers = {22, 3, 4, 55, 40};
        System.out.println("Maximum number is: "+maxValue(numbers));
    }

    static int maxValue(int[] arr){
       int largest = arr[0];
        for (int i = 1; i < arr.length; i++) {
            if(arr[i] > largest){
                largest = arr[i];
            }
        }
        return largest;

    }
}
